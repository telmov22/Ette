<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jabto.ette.MainActivity">

    <VideoView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/bgVideoView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0" />

    <com.facebook.login.widget.LoginButton
        android:text="Log in with Facebook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fbLogin"
        android:textColor="@android:color/white"
        android:background="@drawable/fb_loginbutton_bg"
        app:layout_constraintTop_toTopOf="@+id/etteLoginButton"
        app:layout_constraintLeft_toLeftOf="@+id/bgVideoView"
        app:layout_constraintRight_toRightOf="@+id/bgVideoView"
        android:visibility="invisible" />

    <Button
        android:text="Log in with Ette"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/etteLoginButton"
        android:textColor="@android:color/white"
        android:background="@drawable/ette_loginbutton_bg"
        app:layout_constraintBottom_toBottomOf="@+id/bgVideoView"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.75"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        style="@style/com_facebook_loginview_default_style"
        android:drawablePadding="0dp"
        android:drawableLeft="@android:color/transparent" />

    <Button
        android:text="Log in with Facebook"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/FacebookLoginButton"
        android:textColor="@android:color/white"
        android:background="@drawable/fb_loginbutton_bg"
        android:layout_marginEnd="60dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        style="@style/com_facebook_loginview_default_style"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/etteLoginButton"
        android:drawablePadding="0dp" />


</android.support.constraint.ConstraintLayout>
